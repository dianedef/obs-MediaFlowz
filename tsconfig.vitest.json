{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "types": ["vitest/globals"],
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "bundler",
        "allowJs": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ]
} 